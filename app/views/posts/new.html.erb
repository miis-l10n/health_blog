<h1><%= t( '.post_page' ) %></h1>
<%= form_for @post do |f| %>
 
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> prohibited
        this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td><%= f.label t('.post_title') %></td>
      <td><%= f.text_field :title %></td>
    </tr>    

    <tr>  
      <td><%= f.label t('.new_img') %></td> 
      <td><%= f.text_field :img_url%></td>
    </tr>  

    <tr>  
      <td><%= f.label t('.new_author') %></td>
      <td><%= f.text_field :author %></td>
    </tr>  

    <tr>  
      <td><%= f.label t('.new_body') %></td>
      <td><%= f.text_area :body %></td>
    </tr>
  </table>
 
  <p>
    <%= f.submit t('.new_create') %>
  </p>
 
<% end %>

<%= link_to t('.back_click'), posts_path %>
